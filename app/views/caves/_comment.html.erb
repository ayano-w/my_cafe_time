<% comments.each do |comment| %>
  <div class="row">
    <div class="col-3">
      <p class="m-1">
        <% if comment.user.profile_image.present? %>
          <%= attachment_image_tag comment.user, :profile_image, :fill, 30, 30, class: "rounded-circle"%>
        <% else %>
          <%= image_tag asset_path('coffee_2.jpg'), size: '30x30', class: "rounded-circle" %>
        <% end %>
        <%= comment.user.name %>
      </p>
    </div>
    <div class="col-7">
      <%= comment.comment %>
    </div>

    <% if comment.user == (current_user || cafe.user) %>
    <div class="col-2">
      <%= link_to cafe_comment_path(cafe.id, comment.id), method: :delete do %>
        <i class="fas fa-minus-circle link"></i>
      <% end %>
    </div>
    <% end %>
  </div>
<% end %>
